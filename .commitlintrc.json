{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "subject-case": [0, "never"],
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ]
    ]
  }
}
